<.simple_form class="h-full pl-8" for={@form} phx-target={} phx-change="validate" phx-submit="save">
  <!-- Back button -->
  <.back navigate={~p"/case/#{@case_id}"}><%= gettext("Back to case") %></.back>

  <!-- Form component -->
  <div class="flex flex-row w-full h-full bg-red-100">
    
    <!-- Left side of form -->
    <div class="basis-1/3 bg-orange-100">
    </div>

    <!-- Right side of form -->
    <div class="basis-2/3 bg-teal-100">
    </div>
  </div>
</.simple_form>
